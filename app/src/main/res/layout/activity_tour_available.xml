<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgrounddangnhap"
    tools:context=".TourAvailableActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/textwhile"
        android:gravity="center"
        android:text="@string/tourAvailable_availableTour"
        android:textSize="25sp"
        android:textStyle="bold" />


    <ListView
        android:id="@+id/tourAvailable_tourListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#20000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tourAvailable_previousPageBtn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_stye"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/tourAvailable_previousPageBtn"/>

        <TextView
            android:id="@+id/tourAvailable_currentPageText"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:textColor="@color/textwhile"
            android:textColorHint="@color/textwhile"
            android:textSize="20dp"
            android:hint="@string/tourAvailable_currentPageText_hint" />

        <Button
            android:id="@+id/tourAvailable_nextPageBtn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_stye"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/tourAvailable_nextPageBtn"/>
    </LinearLayout>

    <Button
        android:id="@+id/tourAvailable_createTourBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button_stye"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/tourAvailable_createTour" />

</LinearLayout>