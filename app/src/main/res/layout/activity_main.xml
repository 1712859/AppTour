<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />


    <EditText
        android:id="@+id/edittextuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/main_usernameHint"
        android:maxLines="1" />


    <EditText
        android:id="@+id/edittextpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/main_passwordHint"
        android:inputType="textPassword"
        android:maxLines="1" />


    <LinearLayout
        android:id="@+id/DN_DK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonDangNhap"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:text="@string/main_loginButton"
            android:textColor="@color/textwhile" />

        <Button
            android:id="@+id/buttonDangKi"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/main_signinButton"
            android:textColor="@color/textwhile" />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_DangNhapKhac"
        android:layout_marginTop="10dp"
        android:layout_gravity="left"
        android:maxLines="1"
        />
    <LinearLayout
        android:id="@+id/DN_DK_GG_FB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonDangNhapGG"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:textSize="17dp"
            android:text="@string/main_loginGGButton"
            android:textColor="@color/textGG"
            android:background="@color/ButtonGG_FB"
            android:drawableLeft="@drawable/icongg"

            />

        <Button
            android:id="@+id/buttonDangNhapFB"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/main_loginFBButton"
            android:textColor="@color/textFB"
            android:background="@color/ButtonGG_FB"
            android:drawableLeft="@drawable/iconfb"

            />

    </LinearLayout>

</LinearLayout>