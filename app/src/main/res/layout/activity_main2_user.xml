<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgrounđangki"
    tools:context=".Main2Activity_user">
    <Button
        android:id="@+id/backge"
        android:layout_width="31dp"
        android:layout_height="35dp"
        android:layout_gravity="left"
        android:layout_marginStart="16dp"
        android:background="#00ffffff"
        android:drawableLeft="@drawable/back"
        android:paddingRight="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars[0]"
        android:background="@drawable/avatar"

        />


    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/dangky_fullname"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/textwhile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_pic" />

    <TextView
        android:id="@+id/profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="@string/profile_email"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/textwhile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_name" />
    <TextView
        android:id="@+id/profile_email_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:hint="@string/profile_email_value"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/textwhile"
        app:layout_constraintStart_toEndOf="@id/profile_email"
        app:layout_constraintTop_toBottomOf="@id/profile_name" />



    <TextView
    android:id="@+id/profile_SDT"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="12dp"
    android:gravity="center"
    android:text="@string/profile_sdt"
    android:textSize="18sp"
    android:textStyle="bold"
        android:textColor="@color/textwhile"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/profile_email" />
    <TextView
        android:id="@+id/profile_SDT_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:hint="@string/profile_sdt_value"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/textwhile"
        app:layout_constraintStart_toEndOf="@id/profile_SDT"
        app:layout_constraintTop_toBottomOf="@id/profile_email" />
    <TextView
        android:id="@+id/profile_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="@string/profile_address"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/textwhile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_SDT" />
    <TextView
        android:id="@+id/profile_address_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:hint="@string/profile_address_value"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/textwhile"
        app:layout_constraintStart_toEndOf="@id/profile_address"
        app:layout_constraintTop_toBottomOf="@id/profile_SDT" />
    <TextView
        android:id="@+id/profile_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="@string/profile_Phai"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/textwhile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_address" />
    <TextView
        android:id="@+id/profile_gender_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:hint="@string/profile_Phai_value"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/textwhile"
        app:layout_constraintStart_toEndOf="@id/profile_gender"
        app:layout_constraintTop_toBottomOf="@id/profile_address" />
    <TextView
        android:id="@+id/profile_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="@string/profile_date"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/textwhile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_gender" />
    <TextView
        android:id="@+id/profile_date_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:hint="@string/profile_date_value"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/textwhile"
        app:layout_constraintStart_toEndOf="@id/profile_date"
        app:layout_constraintTop_toBottomOf="@id/profile_gender" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/buttonEditImformation"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_stye"
            android:text="Edit Imformation"
            android:textColor="@color/backgrounđangki" />

        <Button
            android:id="@+id/buttonviewMyTour"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_stye"
            android:text="ViewMyTour"
            android:textColor="@color/backgrounđangki" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>