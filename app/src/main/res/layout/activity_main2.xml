<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main2Activity"
    >

    <Button
        android:id="@+id/main2_viewUserProfileBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/main2_viewUserProfile"
        />

    <Button
        android:id="@+id/main2_createTourBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/main2_createTour"
        />

    <Button
        android:id="@+id/main2_viewAvailableTourBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/main2_viewAvailableTourList"
        />

</LinearLayout>