<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main4Activity_Creat"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:background="@color/backgrounđangki">

    <Button
        android:id="@+id/backgeCreat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:background="#00ffffff"
        android:drawableLeft="@drawable/back"
        android:paddingRight="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/Tilel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/CreatTourTitle"
        android:gravity="center"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@color/textwhile"
        />

    <EditText

        android:id="@+id/TourName"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="@string/TourName"
        android:inputType="text"
        android:textSize="20dp"
        android:textColorHint="@color/textwhile"
        android:textColor="@color/textwhile"
        android:background="@drawable/button_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Tilel"
        />


    <EditText

        android:id="@+id/DayStart"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_login"
        android:gravity="center"
        android:hint="@string/DateStart"
        android:inputType="date"
        android:textColor="@color/textwhile"
        android:textColorHint="@color/textwhile"
        app:layout_constraintEnd_toEndOf="@+id/edittextNguoiLon"
        app:layout_constraintStart_toStartOf="@+id/edittextNguoiLon"
        app:layout_constraintTop_toBottomOf="@id/TourName" />

    <EditText
        android:id="@+id/DayEnd"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_login"
        android:gravity="center"
        android:hint="@string/DateEnd"
        android:inputType="date"
        android:textColor="@color/textwhile"
        android:textColorHint="@color/textwhile"
        app:layout_constraintEnd_toEndOf="@+id/edittextTreEm"
        app:layout_constraintStart_toStartOf="@+id/edittextTreEm"
        app:layout_constraintTop_toBottomOf="@id/TourName" />
    <EditText
        android:id="@+id/edittextNguoiLon"
        android:gravity="center"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:hint="@string/adults"
        android:inputType="number"
        android:textColorHint="@color/textwhile"
        android:textColor="@color/textwhile"
        android:background="@drawable/button_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/DayStart"
        />

    <EditText
        android:id="@+id/edittextTreEm"
        android:gravity="center"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_login"
        android:hint="@string/childs"
        android:inputType="number"
        android:textColorHint="@color/textwhile"
        android:textColor="@color/textwhile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/DayStart" />

    <EditText
        android:id="@+id/edittextMinCost"
        android:gravity="center"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:hint="@string/Mincos"
        android:inputType="number"
        android:textColorHint="@color/textwhile"
        android:background="@drawable/button_login"
        android:textColor="@color/textwhile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edittextNguoiLon"
        />

    <EditText
        android:id="@+id/edittextMaxCost"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_login"
        android:gravity="center"
        android:hint="@string/Maxcost"
        android:inputType="number"
        android:textColorHint="@color/textwhile"
        android:textColor="@color/textwhile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edittextNguoiLon" />

    <EditText
        android:id="@+id/edittextImageTour"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="@string/imagetour"
        android:inputType="text"
        android:textColorHint="@color/textwhile"
        android:textColor="@color/textwhile"
        android:background="@drawable/button_login"
        app:layout_constraintTop_toBottomOf="@id/edittextMinCost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <Button
        android:id="@+id/CreateTour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Creat"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginBottom="30dp"
        android:textColor="@color/backgrounđangki"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/button_stye"
        />


</androidx.constraintlayout.widget.ConstraintLayout>